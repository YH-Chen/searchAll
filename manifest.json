{
  "name": "SearchAll",
  "version": "1.0",
  "description": "Show historical records & page in collection folder when searching.",
  "icons": {"128": "icon.png"},

  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "permissions": [
    "bookmarks",
    "history"
  ],

  "browser_action": {
    "default_title": "SearchAll",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}